<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">


                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_margin="@dimen/margin_image_profile"
                    android:layout_width="@dimen/imageSize_profile"
                    android:layout_height="@dimen/imageSize_profile"
                    android:src="@drawable/gradiant_register"/>

            </LinearLayout>

            <TextView
                android:id="@+id/profile_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="20sp"
                android:textColor="@color/charcoal_gray"
                android:background="@color/white"
                android:elevation="1dp"
                android:gravity="center"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:text="@string/state_and_phone"
                android:paddingLeft="@dimen/general_padding_15"
                android:textSize="17sp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:elevation="1dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mi estado"
                    android:textSize="15sp"
                    android:textColor="@color/charcoal_gray"
                    android:background="@color/white"
                    android:padding="@dimen/general_padding_15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>

                <TextView
                    android:id="@+id/profile_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="622 333 569"
                    android:textSize="15sp"
                    android:textColor="@color/charcoal_gray"
                    android:background="@color/white"
                    android:padding="@dimen/general_padding_15"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>